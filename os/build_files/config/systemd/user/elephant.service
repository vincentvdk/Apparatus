[Unit]
Description=Elephant - Backend service for Walker launcher
After=graphical-session.target
PartOf=graphical-session.target

[Service]
Type=simple
# Include user flatpak applications in search path
Environment="XDG_DATA_DIRS=%h/.local/share/flatpak/exports/share:/var/lib/flatpak/exports/share:/usr/local/share:/usr/share"
ExecStart=/usr/bin/elephant
Restart=on-failure
RestartSec=3

[Install]
WantedBy=graphical-session.target
